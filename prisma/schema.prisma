generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String      @id @default(uuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  nodes     TaskNode[]
  edges     TaskEdge[]
}

model TaskNode {
  id          String    @id 
  title       String
  description String
  status      TaskStatus
  positionX   Float
  positionY   Float
  type        TaskNodeType
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
}

model TaskEdge {
  id             String      @id 
  source         String      
  target         String     
  type           TaskNodeType
  animated       Boolean
  deletable      Boolean
  reconnectable  Boolean
  projectId      String
  project        Project     @relation(fields: [projectId], references: [id])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskNodeType {
  TASK
}
