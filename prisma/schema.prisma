generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String      @id @default(uuid())
  name      String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  nodes     TaskNode[]
  edges     TaskEdge[]
  userId    String
  user      User        @relation(fields: [userId], references: [id])
}

model TaskNode {
  id          String    @id 
  title       String
  description String
  status      TaskStatus
  positionX   Float
  positionY   Float
  type        NodeType
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
}

model TaskEdge {
  id             String      @id 
  source         String      
  target         String     
  type           NodeType
  animated       Boolean
  deletable      Boolean
  reconnectable  Boolean
  projectId      String
  project        Project     @relation(fields: [projectId], references: [id])
}

model User {
  id        String    @id @unique    
  email     String    @unique
  displayName String
  photoURL    String?
  phoneNumber String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
  test      String?
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum NodeType {
  TASK
}
