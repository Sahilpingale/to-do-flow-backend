{
  "name": "to-do-flow-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "deploy": "npm run build && npm run generate-swagger && npm run start",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "generate-swagger": "ts-node src/config/swagger-generator.ts",
    "database:seed": "npx ts-node src/scripts/seed.ts",
    "database:init": "NODE_ENV=development prisma migrate dev && npm run database:seed",
    "database:reset": "NODE_ENV=development prisma migrate reset && npm run database:seed",
    "watch": "tsc --noEmit --watch",
    "docker:prod": "docker compose --env-file .env.production up --build",
    "docker:dev": "docker compose --env-file .env.development up --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.5"
  }
}
